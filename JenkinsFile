pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build Application'
            }
        }
    
  
        stage('Test') {
            steps {
                echo 'Testing Application'
            }
        }
    

        stage('Deploy') {
            steps {
                echo 'Deploying Application'
            }
        }
    }
	post{
	always{
	emailext body: 'Summary', subject: 'pipeline status', to: 'archana.r@zemosolabs.com'
	}

	}
   }
